<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Trips</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <main class="container">
      <h1>My Trips</h1>

      <% if (message) { %>
      <p class="error"><%= message %></p>
      <% } %>

      <% if (trips.length === 0) { %>
      <p>No trips yet. <a href="/trips/new">Add you first destination</a>.</p>
      <% } %>

      <section class="grid">
        <% trips.forEach(trip => { %>
        <article class="card">
          <h2>
            <a href="/trips/<%= trip._id %>"><%= trip.destination %></a>
          </h2>

          <p>
            <strong>Status:</strong>
            <%= trip.status %>
          </p>
          <p>
            <strong>Priority:</strong>
            <%= trip.priority %>/5
          </p>

          <% if (trip.country) { %>
          <p>
            <strong>Country:</strong>
            <%= trip.country %>
          </p>
          <% } %>
        </article>
        <% }); %>
      </section>
    </main>
  </body>
</html>
